CREATE TABLE Transactions (

TransactionId INT (10) AUTO_INCREMENT,
UserId INT(10) NOT NULL;
TransactionType VARCHAR(20)('INCOMING', 'OUTGOING'); NOT NULL
TransactionDate DATE; NOT NULL
TransactionAmount DECIMAL (10,2) NOT NULL;
TransactionFee DECIMAL (10,2) NOT NULL; 
recipient_client_Id INT (10) NOT NULL,                                  
recipient_Iban VARCHAR(34) , NOT NULL                             
recipient_bic VARCHAR(11), NOT NULL                            
recipient_first_name VARCHAR(50), NOT NULL               
recipient_last_name VARCHAR(50), NOT NULL      
user_balance_before DECIMAL(10,2) NOT NULL ,              
user_balance_after DECIMAL(10,2) NOT NULL ,             
transfer_purpose TEXT, VARCHAR (100) NOT NULL 

PRIMARY KEY (TransactionId)
);
